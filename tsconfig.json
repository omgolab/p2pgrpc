{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
  },
  "include": [
    "gen/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}